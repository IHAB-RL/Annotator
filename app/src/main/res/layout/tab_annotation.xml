<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonAnnotation1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/category_1"
                android:textColor="@color/colorButtonText"
                android:background="@drawable/button_ripple_dark_blue"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/buttonAnnotation2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/category_2"
                android:textColor="@color/colorButtonText"
                android:background="@drawable/button_ripple_dark_blue"
                android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

            <Button
                android:id="@+id/buttonAnnotation3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/category_3"
                android:textColor="@color/colorButtonText"
                android:background="@drawable/button_ripple_dark_blue"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/buttonAnnotation4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/category_4"
                android:textColor="@color/colorButtonText"
                android:background="@drawable/button_ripple_dark_blue"
                android:layout_weight="0.5"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/buttonAnnotation5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/category_5"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/button_ripple_light_blue"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/buttonAnnotation6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/category_6"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/button_ripple_light_blue"
            android:layout_weight="0.5"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/buttonAnnotation7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/category_7"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/button_ripple_yellow"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/buttonAnnotation8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/category_8"
            android:textColor="@color/colorButtonText"
            android:background="@drawable/button_ripple_yellow"
            android:layout_weight="0.5"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

    <Button
        android:id="@+id/buttonRemove"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/button_eraseLast"
        android:background="@drawable/button_ripple_red"
        android:textColor="@color/colorButtonText"/>

        </LinearLayout>

</LinearLayout>