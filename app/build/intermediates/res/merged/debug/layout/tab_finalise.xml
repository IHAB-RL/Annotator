<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/textFieldHeight"
        android:layout_marginBottom="@dimen/underFinaliseButtonMargin"
        android:background="@color/colorPrimaryDark">


        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorPrimaryDark"/>

<LinearLayout

    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:orientation="vertical"
    android:padding="@dimen/radioContainerPadding"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:text="@string/title_Charakterisierung_der_situation"
            android:textSize="@dimen/textSizeHeadLine"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/radioElementsMargin"
            android:textSize="@dimen/textSizeSubHeadLine"
            android:text="@string/subtitle_Lichtverh_ltnisse"/>

        <RadioGroup
            android:id="@+id/radioLichtverhaeltnisse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/startPaddingRadio"
                android:textSize="@dimen/textSizeRadioButtons"
                android:layout_marginTop="@dimen/radioButtonMarginTop"
                android:layout_marginBottom="@dimen/radioButtonMarginTop"
                android:text="@string/option_sehr_hell"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/startPaddingRadio"
                android:textSize="@dimen/textSizeRadioButtons"
                android:layout_marginTop="@dimen/radioButtonMarginTop"
                android:layout_marginBottom="@dimen/radioButtonMarginTop"
                android:text="@string/option_eher_hell"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/startPaddingRadio"
                android:textSize="@dimen/textSizeRadioButtons"
                android:layout_marginTop="@dimen/radioButtonMarginTop"
                android:layout_marginBottom="@dimen/radioButtonMarginTop"
                android:text="@string/option_mittel_angenehmes_Tageslicht"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/startPaddingRadio"
                android:textSize="@dimen/textSizeRadioButtons"
                android:layout_marginTop="@dimen/radioButtonMarginTop"
                android:layout_marginBottom="@dimen/radioButtonMarginTop"
                android:text="@string/option_eher_dunkel"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/startPaddingRadio"
                android:textSize="@dimen/textSizeRadioButtons"
                android:layout_marginTop="@dimen/radioButtonMarginTop"
                android:layout_marginBottom="@dimen/radioButtonMarginTop"
                android:text="@string/option_sehr_dunkel"/>

        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hLineWidth"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:textSize="@dimen/textSizeSubHeadLine"
        android:text="@string/subtitle_Laustaerke_der_Umgebungsgeraeusche"/>

    <RadioGroup
        android:id="@+id/radioLautstaerke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_sehr_laut"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_laut"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_mittel"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_leise"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_sehr_leise"/>

    </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hLineWidth"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:textSize="@dimen/textSizeSubHeadLine"
        android:text="@string/subtitle_Raumbeschreibung"/>

    <RadioGroup
        android:id="@+id/radioRaumbeschreibung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_kleiner_beengter_Raum"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_angemessene_Raumgroesse"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_grosser_geraeumiger_Raum"/>

    </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hLineWidth"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:textSize="@dimen/textSizeSubHeadLine"
        android:text="@string/subtitle_Hoersituation_des_Probanden"/>

    <RadioGroup
        android:id="@+id/radioHoersituation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_keine_Hoergeraete"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_Hoergeraete_unerfahren"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/startPaddingRadio"
            android:textSize="@dimen/textSizeRadioButtons"
            android:layout_marginTop="@dimen/radioButtonMarginTop"
            android:layout_marginBottom="@dimen/radioButtonMarginTop"
            android:text="@string/option_Hoergeraete_erfahren"/>

    </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hLineWidth"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/radioElementsMargin"
        android:layout_marginTop="@dimen/radioElementsMargin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/radioElementsMargin"
            android:layout_marginTop="@dimen/radioElementsMargin"
            android:textSize="@dimen/textSizeSubHeadLine"
            android:text="@string/subtitle_Weitere_Angaben"/>

        <EditText
            android:id="@+id/freitext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="textMultiLine"
            android:padding="@dimen/editTextPaddingStart"
            android:hint="@string/hint_Texteingabe_hier"
            android:textSize="@dimen/textSizeEditHint"
            android:paddingStart="@dimen/editTextPaddingStart"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonFinalise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="96dp"
        android:text="@string/button_Abschliessen"
        android:scaleY="1.5"
        android:scaleX="1.5"/>

</LinearLayout>

        <View
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorPrimaryDark"/>

    </LinearLayout>

</ScrollView>